# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration (comma-separated origins or * for all)
CORS_ORIGIN=*

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=medshop_db
DB_USER=root
DB_PASSWORD=your-password

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@example.com

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# SMS Configuration (optional)
# SMS_PROVIDER=twilio
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# PayHere Configuration
PAYHERE_MERCHANT_ID=your-merchant-id
PAYHERE_SECRET=your-merchant-secret
PAYHERE_SANDBOX=true
PAYHERE_BASE_URL=https://sandbox.payhere.lk/pay/checkout
PAYHERE_NOTIFY_URL=http://your-api-url/api/payments/payhere-notify
PAYHERE_RETURN_URL=http://your-frontend-url/checkout/success
PAYHERE_CANCEL_URL=http://your-frontend-url/checkout/cancel

